# Ultra-simple Dockerfile - Copy everything approach
FROM node:18

WORKDIR /workspace

# Copy entire repo
COPY . .

# Navigate and build
RUN cd frontend && \
    yarn install && \
    yarn build && \
    npm install -g serve

# Set working directory to frontend
WORKDIR /workspace/frontend

EXPOSE 3000

CMD ["serve", "-s", "build", "-p", "3000"]
