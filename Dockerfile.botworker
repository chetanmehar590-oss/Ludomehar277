FROM python:3.11

WORKDIR /workspace

# Copy everything
COPY . .

# Go to backend and install
WORKDIR /workspace/backend
RUN pip install --no-cache-dir -r requirements.txt

# Back to root for running
WORKDIR /workspace

# Set env
ENV PYTHONUNBUFFERED=1

# Run bot
CMD ["python", "-m", "backend.bot_runner"]
